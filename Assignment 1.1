#include<iostream>
using namespace std;
int main(){
  int a[10],i,n,firstZeroIndex=-1;
  int count=0;
 int low=0,mid;
    cout<<"Enter size";
    cin>>n;
     int high=n-1;
    cout<<"Enter Array :: ";
    for(i=0;i<n;i++){
    cin>>a[i];
    }
   while (low <= high) {
        int mid = low + (high - low) / 2;
        if (a[mid] == 0) {
            firstZeroIndex = mid;
            high = mid - 1; // Look for earlier 0s in the left half
        } else {
            low = mid + 1; // Look in the right half
        }
    }
  
    // If no zero is found, return 0
    if (firstZeroIndex == -1) {
    	cout<<"No zeros present";
        return 0;
    }

    // Number of zeroes is total elements minus index of first zero
    int k= n - firstZeroIndex;
    cout<<"Number of zeros "<<k;
    return 0;
}
